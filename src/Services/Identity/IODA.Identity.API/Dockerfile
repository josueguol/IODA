# Build
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

COPY global.json Directory.Build.props ./
COPY src/Shared/ src/Shared/
COPY src/Services/Identity/ src/Services/Identity/

RUN dotnet restore src/Services/Identity/IODA.Identity.API/IODA.Identity.API.csproj
RUN dotnet publish src/Services/Identity/IODA.Identity.API/IODA.Identity.API.csproj -c Release -o /app/publish --no-restore

# Runtime
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app
EXPOSE 8080

COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "IODA.Identity.API.dll"]
